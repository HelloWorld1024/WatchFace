<?xml version="1.0" encoding="utf-8"?>
<com.tnt.watchhome.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_view"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    android:paddingTop="15dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/icon_image"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:src="@drawable/bg_watcherboard"/>

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:layout_alignBaseline="@id/icon_image"
            android:layout_toRightOf="@id/icon_image"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorGolen"
            android:textSize="40sp"
            android:gravity="center"
            android:text="@string/app_name"/>

    </RelativeLayout>



</com.tnt.watchhome.widget.BoxInsetLayout>
